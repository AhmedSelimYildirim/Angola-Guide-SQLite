<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAKARYA UYGULAMALI BİLİMLER ÜNİVERSİTESİ"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#000000" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DERS: MOBİL PROGRAMLAMA"
        android:textSize="16sp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BÖLÜM: BİLGİSAYAR PROGRAMCILIĞI"
        android:textSize="16sp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ÖĞRETİM ELEMANI: NEVZAT TAŞBAŞI"
        android:textSize="16sp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ÖDEV KONUSU: ÜLKE TANITIMI (ANGOLA)"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HAZIRLAYAN:"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AHMED SELİM YILDIRIM"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24210201071"
        android:textSize="16sp"
        android:layout_marginBottom="50dp" />

    <Button
        android:id="@+id/btnKapakGiris"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="UYGULAMAYA GİRİŞ"
        android:backgroundTint="#1A237E"
        android:textColor="#FFFFFF" />

</LinearLayout>